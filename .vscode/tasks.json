{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "debug npm dev",
			"type": "shell",
			"command": "npm run dev",
			"isBackground": true,
			"problemMatcher": [
				{
					"base": "$tsc",
					"fileLocation":["relative", "${workspaceFolder}/src"],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "[nodemon] starting",
						"endsPattern": "Debugger listening"
					}
				}
			]
		}
	]
}